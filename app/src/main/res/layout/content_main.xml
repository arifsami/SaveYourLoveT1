<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sacompany.saveyourlove.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txtSoru1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Ne olup bittiği hakkında hiçbir fikrin yok. Ne yapacaksın?"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!--
    <ImageView
        android:id="@+id/imgSoru1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtSoru1"
        android:layout_margin="5dp"
        android:background="@color/colorAccent" />
    -->

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imgSoru1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/txtSoru1"
        android:layout_margin="5dp"
        android:background="@drawable/soru1" />

    <RadioGroup
        android:id="@+id/radioGroupCevap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSoru1">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Bu bir şaka olmalı, telefonu kapat ve anneni ara."
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Başlayalım"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 Cevap 3 "
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 Cevap 4 "
            android:textSize="14sp" />

    </RadioGroup>

</RelativeLayout>
